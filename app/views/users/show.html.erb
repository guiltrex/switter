<% provide(:title, show_name(@user.username)) %>
<div class="row">
  <aside class="span4">
    <section>
				<%= render partial: "shared/user_info", locals: {id_route_ver: params[:id]||0} %>
				<%= render 'friend_form' if signed_in? %>	
    </section>
    <section>
        <%= render 'shared/stats' %>
    </section>
    <section>        
        <%= render 'shared/gs' %>
    </section>    
    <% if current_user?(@user) %>
			<section>
				<%= render partial: 'shared/micropost_form' %>
			</section>
    <% end %>
       
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3 class='micropost_title'>Microposts by 
      <%= if current_user?(@user); "me";else; show_name(@user.username);end%>
      (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render partial: "users/micropost", collection: @microposts, locals: {id_route_ver: params[:id]||0} %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
