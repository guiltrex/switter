<% provide(:title, show_name(@user.username)) %>
<div class="row">
  <aside class="span4">
    <section>
			<%= render "shared/user_info" %>
    </section>
    <% if current_user?(@user) %>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
    <% end %>
       
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3 class='micropost_title'>Microposts by 
      <%= if current_user?(@user); "me";else; show_name(@user.username);end%>
      (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render partial: "users/micropost", collection: @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
