<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
				<%= render partial: "shared/user_info", locals: {id_route_ver: params[:id]||0} %>
				<%= render 'friend_form' if signed_in? %>	
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="friend_avatars">
          <% @users.each do |user| %>
						<a href="<%= user_path(user) %>">
							<%= render partial: 'users/preimage', locals: {user: user} %>
						</a>
          <% end %>
        </div>
      <% end %>     
    </section>
    <section>
      <%= render 'shared/gs' %>   
		</section>
  </aside>
  
  <div class="span8">
    <h3><%= pluralize_no_count(@users.count, @title) %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
