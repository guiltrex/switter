<li>
  <% unless current_page?(:controller => 'users', :action => 'show', :id => id_route_ver) %>
		<%= render partial: "users/newpimage", locals: {user: micropost.user} %>
  <% end %>
	<section>
  <span class="content">		
		<p><%= micropost.content %></p>
  	<% if micropost.post_pic_url%>
			<a href ="<%=post_pic_url.to_s %>" >
			<%= image_tag micropost.post_pic_url(:post_thumb).to_s,:id => "post_image", class: " img-rounded"%>
			</a>
		<% end %>		
	</span>
  <span class="timestamp">
    Posted 
    <% unless current_page?(:controller => 'users', :action => 'show', :id => id_route_ver) %>
    by <a href=<%= user_url(micropost.user)%> ><%=show_name(micropost.user.username)%></a>,
    <% end %>
    <%= time_ago_in_words(micropost.created_at) %> ago
		<% if current_user?(micropost.user) %>
			<%= link_to "delete", micropost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: micropost.content, :class => "pull-right operation"%>
		<% end %>     
  </span>
  </section>
</li>
