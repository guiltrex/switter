<% provide(:title) %>
<div class="row">
  <aside class="span4">
    <section>
			<%= render "shared/user_info" %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
     </section>    
  </aside>
  <div class="span8">
    <% if @microposts.any? %>
      <h3 class='micropost_title'>Microposts</h3>
      <ol class="microposts">
        <%= render partial: "users/micropost", collection: @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
