<% provide(:title) %>
<div class="row">
  <aside class="span4">
    <section>
			<%= render partial: "shared/user_info", locals: {id_route_ver: params[:id]||0} %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
     </section>    
  </aside>
  <div class="span8">
    <% if @microposts.any? %>
      <h3 class='micropost_title'>New microposts</h3>
      <ol class="microposts">
        <%= render partial: "users/micropost", collection: @microposts, locals: {id_route_ver: params[:id]||0} %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
